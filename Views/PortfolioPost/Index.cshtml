@model System.Data.DataTable

@{
    ViewBag.Title = "Index";
}
<h2>Portfolio</h2>

<table class="table table-hover table-striped">
    <tr>
        <th>Title</th>
        <th>Description</th>
        @*<th>DateCreated</th> *@
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            @*<td>@Model.Rows[i][3]</td> *@
        </tr>
    }
</table>

<div>
    <a asp-controller="PortfolioPost" asp-action="Create" class="add-data-link">Add New Data</a>
</div>





